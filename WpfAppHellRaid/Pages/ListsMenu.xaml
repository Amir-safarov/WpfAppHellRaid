<Page x:Class="WpfAppHellRaid.Pages.ListsMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAppHellRaid.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListsMenu">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <TextBlock HorizontalAlignment="Center">Списки</TextBlock>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="StudentBTN" Click="StudentBTN_Click">Студенты</Button>
                <Button x:Name="ExamBTN" Click="ExamBTN_Click">Экзамены</Button>
                <Button x:Name="EmployeeBTN" Click="EmployeeBTN_Click">Сотрудники</Button>
                <Button x:Name="DisciplinesBTN" Click="DisciplinesBTN_Click">Дисциплины</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
